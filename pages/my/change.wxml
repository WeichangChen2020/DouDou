<!--pages/my/change.wxml-->
<form bindsubmit="formSubmit">
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__bd">
        <input name='input' class="weui-input" placeholder="{{placeholder}}" value='{{value}}' bindchange='valueChange' auto-focus='true' />
      </view>
      <view class="weui-cell__ft">
        <button class="button_mine" formType="submit">保存</button>
      </view>
    </view>
  </view>
</form>